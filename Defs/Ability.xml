<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- LaunchFragGrenade -->
  <AbilityDef>
    <defName>CWF_Ability_LaunchFragGrenade</defName>
    <label>launch frag grenade</label>
    <description>Launch a grenade. Can be reloaded using steel.</description>
    <iconPath>CustomizeWeapon/Gizmos/LaunchFragGrenade</iconPath>
    <aiCanUse>true</aiCanUse>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>12.9</range>
      <warmupTime>1.5</warmupTime>
      <soundCast>Shot_IncendiaryLauncher</soundCast>
      <ai_IsBuildingDestroyer>true</ai_IsBuildingDestroyer>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
      <rangedFireRulepack>Combat_RangedFire_Thrown</rangedFireRulepack>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>Proj_GrenadeFrag</projectileDef>
      </li>
    </comps>
  </AbilityDef>

  <!-- LaunchEMPShell -->
  <AbilityDef>
    <defName>CWF_Ability_LaunchEMPShell</defName>
    <label>launch EMP shell</label>
    <description>Launch a shell that releases a burst of electromagnetic energy, stunning mechanical targets. Can be reloaded using steel.</description>
    <iconPath>CustomizeWeapon/Gizmos/LaunchEMPShell</iconPath>
    <aiCanUse>true</aiCanUse>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>23.9</range>
      <warmupTime>3.5</warmupTime>
      <forcedMissRadius>1.9</forcedMissRadius>
      <soundCast>Shot_IncendiaryLauncher</soundCast>
      <soundCastTail>GunTail_Medium</soundCastTail>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>Bullet_EMPLauncher</projectileDef>
      </li>
    </comps>
  </AbilityDef>

