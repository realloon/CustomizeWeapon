    <modExtensions>
      <li Class="CWF.TraitModuleExtension">
        <weaponTraitDef>CWF_Trait_RapidTrigger</weaponTraitDef>
        <part>Trigger</part>
        <requiredWeaponTags>
          <li>CWF_AssaultRifle</li>
          <li>CWF_SniperRifle</li>
          <li>CWF_Shotgun</li>
          <li>CWF_Handgun</li>
          <li>CWF_SMG</li>
          <li>CWF_LMG</li>
          <li>CWF_Minigun</li>
        </requiredWeaponTags>
