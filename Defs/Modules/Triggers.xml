    <label>rapid trigger</label>
    <graphicData>
      <texPath>CustomizeWeapon/Modules/Trigger/Trigger</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
