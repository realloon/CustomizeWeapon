<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- QuickMagazine -->
  <ThingDef ParentName="CWF_Module">
    <defName>CWF_Module_QuickMagazine</defName>
    <label>quick magazine</label>
    <graphicData>
      <texPath>CustomizeWeapon/Modules/Magazine/Magazine</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
    <modExtensions>
      <li Class="CWF.TraitModuleExtension">
        <weaponTraitDef>CWF_Trait_QuickMagazine</weaponTraitDef>
        <part>Magazine</part>
        <requiredWeaponTags>
          <li>CWF_AssaultRifle</li>
          <li>CWF_SniperRifle</li>
          <li>CWF_Handgun</li>
          <li>CWF_Shotgun</li>
          <li>CWF_SMG</li>
          <li>CWF_LMG</li>
          <li>CWF_Minigun</li>
          <li>CWF_ChargeLance</li>
        </requiredWeaponTags>
        <graphicCases>
          <li>
            <matcher>
              <weaponDefs>
                <li>CWF_Gun_AssaultRifle</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Magazine/QuickMagazine/ForAssaultRifle</texturePath>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>CWF_Gun_LMG</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Magazine/QuickMagazine/ForLMG</texturePath>
              <offset>(69, 206)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>CWF_Gun_ChainShotgun</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Magazine/QuickMagazine/ForChainShotgun</texturePath>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>CWF_Gun_ChargeRifle</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Magazine/QuickMagazine/ForChargeRifle</texturePath>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>CWF_Gun_Minigun</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Magazine/QuickMagazine/ForMinigun</texturePath>
            </graphicData>
          </li>
        </graphicCases>
      </li>
    </modExtensions>
  </ThingDef>

