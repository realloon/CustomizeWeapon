    <defName>CWF_Module_IronSight</defName>
    <label>iron sight</label>
    <graphicData>
      <texPath>CustomizeWeapon/Modules/Sight/Sight</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
