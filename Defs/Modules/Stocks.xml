<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ShortenedStock -->
  <ThingDef ParentName="CWF_Module">
    <defName>CWF_Module_ShortenedStock</defName>
    <label>shortened stock</label>
    <graphicData>
      <texPath>CustomizeWeapon/Modules/Stock/Stock</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
    <modExtensions>
      <li Class="CWF.TraitModuleExtension">
        <weaponTraitDef>CWF_Trait_ShortenedStock</weaponTraitDef>
        <part>Stock</part>
        <graphicCases>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_LMG</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Stock/ShortenedStock/ForLMG</texturePath>
              <offset>(-62, 128)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_HeavySMG</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Stock/ShortenedStock/ForHeavySMG</texturePath>
              <offset>(-9, 145)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_SniperRifle</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Stock/ShortenedStock/ForSniperRifle</texturePath>
            </graphicData>
          </li>
        </graphicCases>
      </li>
    </modExtensions>
  </ThingDef>

