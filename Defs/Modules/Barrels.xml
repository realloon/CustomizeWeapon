<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ExtendedBarrel -->
  <ThingDef ParentName="CWF_Module">
    <defName>CWF_Module_ExtendedBarrel</defName>
    <label>extended barrel</label>
    <graphicData>
      <texPath>CustomizeWeapon/Modules/Barrel/Barrel</texPath>
    </graphicData>
    <statBases>
      <WorkToMake>1500</WorkToMake>
    </statBases>
    <costList>
      <Steel>10</Steel>
      <ComponentIndustrial>1</ComponentIndustrial>
    </costList>
    <recipeMaker>
      <researchPrerequisite>Gunsmithing</researchPrerequisite>
    </recipeMaker>
    <modExtensions>
      <li Class="CWF.TraitModuleExtension">
        <weaponTraitDef>CWF_Trait_ExtendedBarrel</weaponTraitDef>
        <part>Barrel</part>
        <requiredWeaponTags>
          <li>CWF_AssaultRifle</li>
          <li>CWF_BoltActionRifle</li>
          <li>CWF_SniperRifle</li>
          <li>CWF_Handgun</li>
          <li>CWF_SMG</li>
          <li>CWF_LMG</li>
          <li>CWF_Minigun</li>
        </requiredWeaponTags>
        <graphicCases>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_AssaultRifle</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Barrel/ExtendedBarrel/ForAssaultRifle</texturePath>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_LMG</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Barrel/ExtendedBarrel/ForLMG</texturePath>
              <offset>(239, 135)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_HeavySMG</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Barrel/ExtendedBarrel/ForHeavySMG</texturePath>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_Minigun</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Barrel/ExtendedBarrel/ForMinigun</texturePath>
              <offset>(271, 59)</offset>
            </graphicData>
          </li>
          <li>
            <matcher>
              <weaponDefs>
                <li>Gun_Revolver</li>
              </weaponDefs>
            </matcher>
            <graphicData>
              <texturePath>CustomizeWeapon/Modules/Barrel/ExtendedBarrel/ForRevolver</texturePath>
              <offset>(227, 145)</offset>
            </graphicData>
          </li>
        </graphicCases>
      </li>
    </modExtensions>
  </ThingDef>

